*  @param {string}  key  key to indetificate reporter
*/

const PARASITES = ['report@', 'notError@'];
const LINES_TO_CAPTURE = 6;
const STACK_PROPS = [
	'fileName',
	'filePath',
	'lineNumber',
	'columnNumber',
	'functionName',
	'type',
];

